# Build the docker image with `npx nx docker-build delali`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t delali`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system delali && \
          adduser --system -G delali delali

COPY dist/apps/delali delali/
RUN chown -R delali:delali .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix delali --omit=dev -f install

CMD [ "node", "delali" ]
